<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <!-- Logo Start -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.76"
            android:gravity="center"
            android:src="@drawable/casper_logo" />

        <!-- Logo Ends -->
    </LinearLayout>
    <!-- Email TextField -->


    <!-- Password Label -->
    <!-- Password TextField -->

    <TextView
        android:id="@+id/formnaam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header"
        android:text="Naam (volledig)" />

    <EditText
        android:id="@+id/forminputnaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/formnaam"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/formemail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/forminputnaam"
        android:text="Email" />

    <EditText
        android:id="@+id/forminputemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/formemail"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/formdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/forminputemail"
        android:text="datum vervalling (dd/mm/jj)" />

    <EditText
        android:id="@+id/forminputdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/formdate"
        android:ems="10"
        android:inputType="date" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/formvervang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/forminputdate"
        android:text="wordt vervangen door (volledige naam)" />

    <EditText
        android:id="@+id/forminputvervang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/formvervang"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/formopmerking"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/forminputvervang"
        android:text="overige opmerkingen" />

    <EditText
        android:id="@+id/forminputopmerking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/formopmerking"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/forminputopmerking"
        android:layout_marginTop="20dp"
        android:text="vervanging doorgeven" />

</RelativeLayout>
</ScrollView>